{
    "compilerOptions": {
      "module": "es6",
      "target": "es6",
      "lib": ["es6", "dom"],
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "outDir": "./lib",
      "declaration": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "noImplicitReturns" : true,
      "removeComments": true,
      "jsx": "react"
    },
    "include": [
      "src/**/*.ts?",
      "test/**/*.ts?"
  ],
  "exclude": [
      "node_modules",
      "dist",
      "lib"
    ]
  }