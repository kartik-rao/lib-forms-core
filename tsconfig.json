{
    "compilerOptions": {
      "module": "es6",
      "target": "es6",
      "lib": ["es6", "dom"],
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "outDir": "./lib",
      "declaration": true,
      "experimentalDecorators": true,
      "noImplicitReturns" : true,
      "removeComments": true
    },
    "files": [
      "src/index.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }