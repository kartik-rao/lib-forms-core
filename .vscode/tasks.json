{
    "version": "2.0.0",
    "type": "shell",
    "command": "tsc",
    "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
    },
    "args": ["-w", "-p", ".", "--noEmit"],
    "isBackground": true,
    "problemMatcher": "$tsc-watch"
}