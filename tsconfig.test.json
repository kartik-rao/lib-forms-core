{
  "compilerOptions": {
      "rootDir": ".",
      "watch": false,
      "target": "es5",
      "lib": ["es6", "dom"],
      "module": "commonjs",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "jsx": "react",
      "skipLibCheck": true,
      "noImplicitThis": true,
      "allowJs": true,
      "declaration": true
  },
  "include": [
      "test/**/*.ts"
  ],
  "exclude": [
      "node_modules"
  ]
}